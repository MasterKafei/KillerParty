{% extends '@Layout/Default/base.html.twig' %}

{% block content %}

    {{ form_start(form) }}
    {% embed '@Widget/Box/Primary/base.html.twig' %}
        {% block body %}
            {{ form_row(form.title, {'label': 'Titre'}) }}
            {{ form_row(form.place, {'label': 'Lieu'}) }}
            {{ form_row(form.weapon, {'label': 'Arme'}) }}
            {{ form_row(form.objective, {'label': 'Objectif'}) }}
            {{ form_row(form.type, {'label': 'Type de carte'}) }}
            {{ form_rest(form) }}
        {% endblock body %}

        {% block footer %}
            <button type="submit" class="btn btn-primary pull-right">Sauvegarder la carte</button>
        {% endblock footer %}
    {% endembed %}
    {{ form_end(form) }}
{% endblock content %}
