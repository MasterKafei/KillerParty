{% extends '@Layout/Base/base.html.twig' %}

{% block body %}
    <div class="login-box">
        <div class="login-logo">
            <b>Killer</b> Party
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Entrez votre adresse mail pour r√©initialiser votre mot de passe</p>
            {{ form_start(form) }}
            <div class="form-group has-feedback">
                {{ form_widget(form.email, {'attr': {'placeholder': 'Adresse mail'}}) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-xs-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Valider</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}