{% extends '@Layout/Base/base.html.twig' %}

{% block body %}
    <div class="login-box">
        <div class="login-logo">
            <b>Killer</b> Party
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Connectez-vous pour accéder <b>au massacre</b></p>
            {{ form_start(form) }}
            <div class="form-group has-feedback">
                {{ form_widget(form._username) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form._password) }}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-7">
                    {{ form_row(form._remember_me, {'attr': {'class': 'icheck'}}) }}
                </div>
                <div class="col-xs-5">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Se connecter</button>
                </div>
            </div>
            {{ form_end(form) }}
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="text-left">
                        <a href="{{ path('app_user_forgot_password_request') }}">J'ai oublié mon mot de passe</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="text-right">
                        <a href="{{ path('app_user_registration_register') }}">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}