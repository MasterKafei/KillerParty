{% extends '@Layout/Base/base.html.twig' %}

{% block body %}
    <div class="login-box">
        <div class="login-logo">
            <b>Killer</b> Party
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Inscrivez-vous pour commencer <b>le massacre</b></p>
            {{ form_start(form) }}
            <div class="form-group has-feedback">
                {{ form_widget(form.email, {'attr': {'placeholder': 'Adresse email'}}) }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.phoneNumber, {'attr': {'placeholder': 'Téléphone portable'}}) }}
                <span class="glyphicon glyphicon-phone form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.firstName, {'attr': {'placeholder': 'Prénom'}}) }}
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.lastName, {'attr': {'placeholder': 'Nom'}}) }}
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">S'enregister</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}
